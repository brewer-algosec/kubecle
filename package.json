{
  "name": "kubecle",
  "version": "1.1.9",
  "description": "Useful ui for kubernettes",
  "repository": "https://github.com/rydogs/kubecle",
  "main": "electron.js",
  "engineStrict": true,
  "engines": {
    "node": ">=8.11.0",
    "npm": ">=6.4.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node server/index",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "NODE_ENV=development nodemon server/index",
    "client-build": "npm --prefix client run build",
    "client-test": "npm --prefix client run test",
    "build": "electron-builder",
    "dist": "rm -rf dist && npm run client-build && npm run build"
  },
  "pre-commit": [
    "client-test",
    "client-build"
  ],
  "build": {
    "appId": "com.rydogs.kubecle",
    "artifactName": "kubecle.${ext}",
    "productName": "Kubecle",
    "publish": [
      {
        "provider": "github",
        "owner": "rydogs",
        "repo": "kubecle"
      }
    ],
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "icon": "build/icon.png",
      "contents": [
        {
          "x": 160,
          "y": 220
        },
        {
          "x": 360,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "keywords": [
    "kubernettes",
    "k8s"
  ],
  "author": "Ryan Liu",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.3",
    "electron-log": "^2.2.17",
    "electron-updater": "^4.0.6",
    "express": "^4.16.3",
    "express-async-handler": "^1.1.3",
    "json-beautify": "^1.0.1",
    "kubernetes-client": "^6.8.3",
    "request": "^2.88.0",
    "url-parse": "^1.4.3"
  },
  "devDependencies": {
    "electron-builder": "^21.2.0",
    "electron": "6.1.5",
    "nodemon": "^1.17.5",
    "pre-commit": "^1.2.2"
  }
}
